<?xml version='1.0' encoding='utf-8'?>
<widget id="m.cheminot" version="0.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="App">
        <param name="android-package" value="org.apache.cordova.App" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
    </feature>
    <feature name="Cheminot">
        <param name="android-package" value="m.cheminot.plugin.Cheminot" />
    </feature>
    <name>Cheminot</name>
    <description>SNCF TER</description>
    <author email="srenault.contact@gmail.com" href="https://github.com/srenault">Sebastien Renault</author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="EnableViewportScale" value="false" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="HideKeyboardFormAccessoryBar" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="KeyboardShrinksView" value="true" />
    <preference name="KeepRunning" value="true" />
</widget>
