@import 'buttons';
@import 'icons';

scale(value, factor) {
    value * factor
}

header_height=64px
header_size=18px
item_height=66px
item_size=18px
input_height=66px
input_size=18px
btn_size=22px

timetable_clock_size=23px
timetable_startend_size=32px
timetable_to_size=21px
timetable_meta_size=18px

trip_span_size=16px
trip_item_height=66px
trip_lign_width=4px
trip_time_width=80px

device(min_width, max_width, factor) {
    portrait = "only screen and (min-device-width : " + min_width + ") and (max-device-width : " + max_width + ")"
    @media portrait {
        header, .top-bar {
            height: scale(header_height, factor)
            font-size: scale(header_size, factor)
        }

        .list li {
            height: scale(item_height, factor)
            font-size: scale(item_size, factor)
        }

        input[type=text] {
            height: scale(input_height, factor)
            font-size: scale(input_size, factor)
        }

        .font:before {
            font-size: scale(btn_size, factor)
        }

        button.reset {
            width: scale(btn_size, factor)
        }

        #timetable {
            .meta {
                font-size: scale(timetable_meta_size, factor)
            }
            .start-end {
                font-size: scale(timetable_startend_size, factor)
            }
            .alarm-clock:before {
                font-size: scale(timetable_clock_size, factor)
            }
            .to {
                font-size: scale(timetable_to_size, factor)
            }
        }

        #trip .stops li {
            height: scale(trip_item_height, factor)
            font-size: scale(trip_span_size, factor)

            .time {
                width: scale(trip_time_width, factor)
            }

            .lign {
                border-left: scale(trip_lign_width, factor) solid dark-blue
            }
        }
    }
}


// IPHONE 5 (default)
@media only screen {
    header, .top-bar {
        height: header_height
        font-size: header_size
    }

    .list li {
        height: item_height
        font-size: item_size
    }

    input[type=text] {
        height: input_height
        font-size: input_size
    }

    button.reset {
        width: btn_size
    }

    .font:before {
        font-size: btn_size
    }

    #timetable {
        .meta {
            font-size: timetable_meta_size
        }
        .start-end {
            font-size: timetable_startend_size
        }
        .alarm-clock:before {
            font-size: timetable_clock_size
        }
        .to {
            font-size: timetable_to_size
        }
    }

    #trip .stops li {
        height: trip_item_height
        font-size: trip_span_size

        .time {
            width: trip_time_width
        }

        .lign {
            border-left: trip_lign_width solid dark-blue
        }
    }
}

