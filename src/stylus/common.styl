@import 'reset';
@import 'colors';
@import 'font';

global-reset()

* {
    -webkit-font-smoothing: antialiased
    font-family-light()
}

::-webkit-input-placeholder {
    color: grey
    font-family-light()
}

:-moz-placeholder {
    color: grey
    font-family-light()
}

::-moz-placeholder {
    color: grey
    font-family-light()
}

:-ms-input-placeholder {
    color: grey
    font-family-light()
}

html {
    height: 100%
    overflow: hidden
}

h1 {
    font-family-bold()
}

input {
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
    -webkit-appearance: none
    padding-left: 8px
    box-sizing: border-box
    width: 100%
    color: dark-blue
    outline: none
    border: none

    &:focus {
        border-color: blue
    }
}

.container {
    padding: 8px
}

header {
    position: relative
    display: flex
    justify-content: center
    z-index: 2
    width: 100%
    background: blue
    color: #FFF
    box-sizing: border-box

    &.hidden {
        display: none
    }

    h1 {
        margin: auto
    }
}

.setup-progress {
    text-align: center
    padding: 14px 8px 14px 8px
    box-sizing: border-box
    background: dark-green
    position: relative
    color: #FFF
    font-size: 12px

    .text {
        position: relative
        z-index: 1
    }

    .bar {
        position: absolute
        top: 0
        left: 0
        height: 100%
        width: 0%
        background: green
        transition: 0.2s
        transition-property: width
    }

    &.hidden {
        display: none
    }
}

#viewport {
    width: 100%
}

.view {
    &.hidden {
        display: none !important
    }
}

.list {
    li {
        color: grey
        padding: 14px 8px 14px 8px
        display: flex
        align-items: center
        border-bottom: 2px solid grey-blue
        box-sizing: border-box
    }
}
