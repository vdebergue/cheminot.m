@import 'reset';
@import 'colors';

global-reset()

font-family-light() {
    font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
}

font-family-medium() {
    font-family: "HelveticaNeue-Medium", "Helvetica Neue Medium", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
}

* {
    -webkit-font-smoothing: antialiased
    border: 1px #000 solid
    font-family-light()
}

h1 {
    font-size: 17px
    font-family-medium()
}

input {
    box-sizing: border-box
    height: 34px
    width: 100%
    font-size: 12px;
    color: grey-light
    outline: none
    border: 1px solid grey

    &:focus {
        border-color: blue
    }

    &[type=text] {
        border-radius: 6px
    }
}

header, .container {
    padding: 8px
}

header {
    height: 44px
    background: blue
    color: #FFF
    box-sizing: border-box
    padding-top: 13px;
    padding-left: 8px

    h1 {
        margin: auto
        width: 95px
    }

    .back {
        top: 8px
        position: absolute;
    }
}

.view {
    &.hidden {
        display: none
    }
}

.list {
    li {
        padding: 14px 8px 14px 8px
        height: 44px
        font-size: 17px
        border-top: 1px solid grey-light
        box-sizing: border-box
        color: grey-dark
    }
}

button {
    display: inline-block
    border: 1px solid green
    outline: none
    color: green
    border-radius: 4px
    background: #FFF
    font-size: 14px

    &.active {
        background: green
        color: #FFF
    }
}