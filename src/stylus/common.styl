@import 'reset';
@import 'colors';
@import 'font';

global-reset()

* {
    -webkit-font-smoothing: antialiased
    font-family-light()
}

html {
    height: 100%
    overflow: hidden
}

body {
    height: 100%
}

h1 {
    font-size-title()
    font-family-medium()
}

input {
    padding-left: 8px
    box-sizing: border-box
    height: 34px
    width: 100%
    font-size-normal()
    color: grey-dark
    outline: none
    border: 1px solid grey

    &:focus {
        border-color: blue
    }
    
    &[type=text] {
        border-radius: 6px
    }
}

.container {
    padding: 8px
}

header {
    z-index: 2
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 44px
    background: blue
    color: #FFF
    box-sizing: border-box
    padding: 8px
    padding-top: 13px;
    
    h1 {
        margin: auto
        width: 95px
    }
    
    .back {
        top: 8px
        position: absolute
    }
}

#viewport {
    position: absolute
    width: 100%
    top: 44px
}

.view {
    &.hidden {
        display: none
    }
}

.list {
    li {
        padding: 14px 8px 14px 8px
        height: 44px
        font-size-title()
        border-bottom: 1px solid grey-light
        box-sizing: border-box
        color: grey-dark
    }
}

button {
    display: inline-block
    border: 1px solid green
    outline: none
    color: green
    border-radius: 4px
    background: #FFF
    font-size-button()

    &.active {
        background: green
        color: #FFF
    }
}