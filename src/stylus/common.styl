@import 'reset';
@import 'colors';
@import 'font';

global-reset()

* {
    -webkit-font-smoothing: antialiased
    font-family-light()
}

html {
    height: 100%
    overflow: hidden
}

h1 {
    font-family-medium()
}

input {
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
    -webkit-appearance: none
    padding-left: 8px
    box-sizing: border-box
    width: 100%
    color: grey-dark
    outline: none
    border: none

    &:focus {
        border-color: blue
    }
}

.container {
    padding: 8px
}

header {
    position: relative
    display: flex
    justify-content: center
    z-index: 2
    width: 100%
    background: blue
    color: #FFF
    box-sizing: border-box

    &.hidden {
        display: none
    }

    h1 {
        margin: auto
    }
}

#progress-install {
    align-self: center
    margin-right: 10px

    &.hidden {
        display: none
    }
}

#viewport {
    width: 100%
}

.view {
    &.hidden {
        display: none !important
    }
}

.list {
    li {
        color: grey
        border-bottom: 1px solid grey-blue
        padding: 14px 8px 14px 8px
        display: flex
        align-items: center
        border-bottom: 1px solid grey-light
        box-sizing: border-box
    }
}
