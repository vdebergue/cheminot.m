@import 'reset';
@import 'colors';
@import 'font';
@import 'icons';

global-reset()

* {
    -webkit-font-smoothing: antialiased
    font-family-light()
}

html {
    height: 100%
    overflow: hidden
}

body {
    &.ios7 {
        header {
            margin-top: 20px
        }

        #viewport {
            top: 64px
        }
    }
}

h1 {
    font-family-medium()
}

input {
    -webkit-appearance: none
    padding-left: 8px
    box-sizing: border-box
    width: 100%
    color: grey-dark
    outline: none
    border: 1px solid grey

    &:focus {
        border-color: blue
    }
    
    &[type=text] {
        border-radius: 6px
    }
}

.container {
    padding: 8px
}

header {
    display: flex
    text-align: center
    z-index: 2
    width: 100%
    background: blue
    color: #FFF
    box-sizing: border-box

    h1 {
        margin: auto
        width: 95px
    }
}

#viewport {
    width: 100%
}

.view {
    &.hidden {
        display: none
    }
}

.list {
    li {
        padding: 14px 8px 14px 8px
        display: flex
        align-items: center
        border-bottom: 1px solid grey-light
        box-sizing: border-box
        color: grey-dark
    }
}

.btn {
    display: inline-block
    border: 1px solid green
    outline: none
    color: green
    border-radius: 4px
    background: #FFF

    &.active {
        background: green
        color: #FFF
    }
}

clear-button() {
    margin: 0
    padding: 0
    height: 0
    font-size: 0
    border: none
}

.back-btn {
    position: absolute
    clear-button()
    icon('left-arrow', 10px, 10px, #FFF, 0, 5px, 30px)
}