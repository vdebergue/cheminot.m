@import 'colors';
@import 'font';
@import 'buttons';

button-margin-right=4%

#home {

    #schedule {
        position: absolute
        width: 100%
        top: -200px
        z-index: -1
        transition: 0.600s
        text-align: center

        &.displayed {
            z-index: 1
        }

        li {
            position: relative

            &.submit {
                color: dark-blue

                .go {
                    position: absolute
                    right: button-margin-right
                    top: 0
                    height: 100%
                    width: 16px
                    forward_button()
                }
            }
        }
    }

    .search {
        background: #FFF

        form {
            .input {
                position: relative

                &:first-child {
                    border-bottom: 2px solid grey-blue
                }

                input {
                    padding-right: 30px
                }

                button.reset {
                    position: absolute
                    display: none
                    top: 0
                    right: button-margin-right
                    height: 100%
                    width: 22px
                    reset_button()

                    &.filled {
                        display: block
                    }
                }
            }
        }
    }

    .stations {
        border-top: 10px solid grey-blue
    }

    #wrapper {
        overflow: hidden
        position: absolute
        width: 100%
        bottom: 0

        .suggestions {
            position: absolute
            width: 100%

            li {
                > span {
                    line-height: 1px
                }

                .match {
                    color: dark-blue
                }
            }
        }
    }
}