@import 'colors';
@import 'font';

#home {

    .when {
        text-align: center
        position: absolute
        background: #F0F0F0
        width: 100%
        top: 0
        z-index: -1
        transition: 0.250s

        &.done {
            z-index: 1
        }
    }

    .search {
        background: #FFF
        padding-top: 15px

        form {
            input[name=end] {
                margin-top: 17px
                margin-bottom: 17px
            }
        }
    }

    .stations {
        border-top: 1px solid grey-dark

        h2 {
            padding-top: 13px
            padding-bottom: 13px
            box-sizing: border-box
            display: none
            margin: 0 auto
            color: blue
            width: 100%
            border-bottom: 1px solid grey-light
            text-align: center
        }
    }

    .stations.searching {
        position: relative

        h2 {
            display: block
        }
    }

    #wrapper {
        overflow: hidden
        position: absolute
        width: 100%

        .suggestions {
            position: absolute
            width: 100%

            li {

                span {
                    line-height: 0
                }

                .match {
                    font-weight: bold
                }
            }
        }
    }
}