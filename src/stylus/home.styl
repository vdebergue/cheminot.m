@import 'colors';
@import 'font';

#home {

    #schedule {
        position: absolute
        width: 100%
        top: 0
        z-index: -1
        transition: 0.600s
        text-align: center

        &.displayed {
            z-index: 1
        }

        li {
            position: relative

            button {
                border: none
                outline: none
                position: absolute
                top: 0
                right: 2%
                height: 100%
                width: 52px

                &.radio {
                    background: url('../../images/radio-off.svg') no-repeat center
                    background-size: 100%

                    &.active {
                        background: url('../../images/radio-on.svg') no-repeat center
                        background-size: 100%
                    }
                }
            }
        }
    }

    .search {
        background: #FFF

        form {
            .input {
                position: relative

                &:first-child {
                    border-bottom: 2px solid grey-blue
                }

                input {
                    padding-right: 30px
                }

                button.reset {
                    position: absolute
                    top: 0
                    right: 2%
                    border: none
                    outline: none
                    display: none
                    background: url('../../images/cross.svg') no-repeat center
                    background-size: 100%
                    height: 100%
                    width: 22px

                    &.filled {
                        display: block
                    }
                }
            }
        }
    }

    .stations {
        border-top: 10px solid grey-blue
    }

    #wrapper {
        overflow: hidden
        position: absolute
        width: 100%
        bottom: 0

        .suggestions {
            position: absolute
            width: 100%

            li {
                > span {
                    line-height: 1px
                }

                .match {
                    color: #000
                }
            }
        }
    }
}