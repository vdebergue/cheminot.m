@import 'colors';
@import 'font';
@import 'buttons';

global-margin-right=4%

#home {

    #schedule {
        position: absolute
        width: 100%
        top: -200px
        z-index: -1
        transition: 0.600s
        text-align: center

        input[type=date], input[type=time] {
        }

        &.displayed {
            z-index: 1
        }

        li {
            position: relative

            &.submit {
                .go {
                    position: absolute
                    top: 0
                    height: 100%
                    width: 16px
                    right: global-margin-right
                    forward_button(false)
                }
            }

            &.enabled {
                color: dark-blue

                .go {
                    forward_button(true)
                }
            }

            .day, .time {
                position: relative
                display: inline-block
                width: 50%
                line-height: 3.6

                input[type=date], input[type=time] {
                    opacity: 0
                    position: absolute
                    top: 0
                    bottom: 0
                    right: 0
                    left: 0
                }
            }

            .day {
                text-align: left
            }

            .time {
                text-align: right
                color: blue
                margin-right: (global-margin-right / 2)
            }
        }
    }

    .search {
        position: relative
        background: #FFF

        form {
            .input {
                position: relative
                z-index: 2
                width: 100%

                &.animating {
                    position: absolute
                    z-index: 1

                    &.start {
                        transition: 0.2s
                    }

                    &.end {
                        transition: 0.1s
                    }

                    &.above {
                        z-index: 3
                    }
                }

                &:not(:first-child) {
                    border-top: 2px solid grey-blue
                }

                &:last-child {
                    border-bottom: 10px solid grey-blue
                }

                input {
                    padding-right: 30px
                }

                button.reset {
                    position: absolute
                    display: none
                    top: 0
                    height: 100%
                    reset_button()
                    right: global-margin-right

                    &.filled {
                        display: block
                    }
                }
            }
        }
    }

    #wrapper {
        overflow: hidden
        position: absolute
        width: 100%
        bottom: 0

        .suggestions {
            position: absolute
            width: 100%

            li {
                > span {
                    line-height: 1px
                }

                .match {
                    color: dark-blue
                }
            }
        }
    }
}