@import 'colors';
@import 'font';

#home {

    form {
        input[name=end] {
            margin-top: 17px
            margin-bottom: 17px
        }
    }

    .when {
        text-align: center
        margin-bottom: 7px
    }

    .stations {
        border-top: 1px solid grey-dark

        h2 {
            padding-top: 13px
            padding-bottom: 13px
            box-sizing: border-box
            display: none
            font-size: font-size-title()
            width: 59px
            margin: 0 auto
            color: blue
        }
    }

    .stations.searching {
        position: relative

        h2 {
            display: block
        }
    }

    #wrapper {
        overflow: hidden
        position: absolute
        width: 100%
        height: 100%

        .suggestions {
            position: absolute
            width: 100%
        }
    }
}