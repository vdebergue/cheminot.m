#splashscreen {
    position: fixed
    top: 0
    left: 0
    right: 0
    bottom: 0
    z-index: 3
    background: blue
    color: #FFF

    .middle {
        height: 100%
        margin: auto
        text-align: center
    }

    .title {
        display: flex
        align-items: center
        height: 40%

        h1 {
            margin: auto
            font-size: 48px
            font-weight: bold
        }
    }

    .train {
        height: 30%
    }

    .progress {
        height: 40%
        font-size: 18px
        display: flex
        align-items: center

        &.hidden {
            display: none
        }

        .info {
            margin: auto

            > p {
                padding: 10px
            }

            .value, .percent {
                color: #75C4FD
            }

            .value {
                width: 30px
                display: inline-block
                text-align: right
            }
        }
    }
}