@font-face {
    font-family: 'Fontello'
    src: url('../../fonts/fontello/fontello.woff') format('woff')
    font-weight: normal
    font-style: normal
}

icon_fontello(name, color = black) {
    &:before {
        font-family: 'Fontello'
        color: color
        display: block

        if name is 'left-arrow' {
            content: '\e800'
        }

        if name is 'right-arrow' {
            content: '\e801'
        }

        if name is 'clock' {
            content: '\e802'
        }

        if name is 'calendar' {
            content: '\e803'
        }
    }
}

icon(height, width) {
    display: inline-block
    height: height
    width: width
    background-size: contain
}

icon_batch(name, height, width) {
    if name is 'split' {
        background: url('../../fonts/batch/split.svg') no-repeat transparent
    }

    if name is 'arrow-up' {
        background: url('../../fonts/batch/arrow-up.svg') no-repeat transparent
    }

    icon(height, width)
}

icon_custom(name, height, width) {
    if name is 'right-arrow' {
        background: url('../../fonts/custom/arrow-right.svg') no-repeat transparent
    }

    icon(height, width)
}

icon_iconmonstr(name, height, width) {
    if name is 'egg-timer' {
        background: url('../../fonts/iconmonstr/egg-timer.svg') no-repeat transparent
    }

    icon(height, width)
}