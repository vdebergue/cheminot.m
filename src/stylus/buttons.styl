clear-button() {
    margin: 0
    padding: 0
    font-size: 0
    border: none
    background: transparent
    outline: none
}

back_button(size) {
    header .buttons {
        position: absolute
        height: 100%
        display: flex

        .back-btn {
            clear-button()
            align-self: center
            icon('left-arrow', size, size, #FFF, size)
        }
    }
}