@import 'colors';
@import 'icons';

clear-button() {
    margin: 0
    padding: 0
    font-size: 0
    border: none
    background: transparent
    outline: none
}

backward_button(color = blue) {
    clear-button()
    icon('left-arrow', white)
}

clock_button(color = blue) {
    clear-button()
    icon('clock', color)
}

calendar_button(color = blue) {
    clear-button()
    icon('calendar', color)
}

reset_button() {
    clear-button()
    background: url('../../images/cross.svg') no-repeat center
    background-size: 100%
}

forward_button() {
    clear-button()

    if isDisabled {
        background: url('../../images/arrow-right.svg') no-repeat center
    }
    unless {
        background: url('../../images/arrow-right-disabled.svg') no-repeat center
    }

    background-size: 100%
}