@keyframes pullup-loading {
    from { transform: rotate(0deg) translateZ(0) }
    to { transform:rotate(360deg) translateZ(0) }
}

#departures {

    #wrapper {
        background: grey-blue
        position: absolute
        width: 100%
        overflow: hidden
        bottom: 0

        #scroller {
            position: absolute
            width: 100%
        }

        .empty {
            display: none
            padding-top: 50%
            text-align: center
        }

        ul {
            > li {
                border-bottom: 2px solid grey-blue
                box-sizing: border-box
                color: dark-blue
                padding: 0 global-margin-right 2% global-margin-right
                background: #FFF

                &.day {
                    padding: 4%
                    text-align: center
                    background: grey-blue
                    color: dark-blue
                }

                .meta {
                    position: relative
                    padding: 3% 0 3% 0

                    .changements {
                        color: grey-light
                        icon_batch('split', grey-light)
                    }

                    .duration {
                        display: inline-block
                        right: 0
                        position: absolute
                        width: 22%

                        .egg-timer {
                            position: absolute
                            left: 0
                            icon_monstr('duration', grey-light)
                        }

                        .value {
                            position: absolute
                            right: 0
                        }
                    }
                }

                .start-end {
                    position: relative
                    padding: 0 0 2% 0

                    span:not(:last-children) {
                        margin-right: 2%
                    }

                    .start {
                        display: inline-block
                        width: 40%
                        padding-left: 5%
                    }
                }

                .alarm-clock {
                    icon_batch('alarm-clock', grey-light)
                }

                .to {
                    icon_cheminot('arrow-right', blue)
                    margin: 0 5px 0 5px
                    vertical-align: 2px
                }
            }

            .pull-up {
                padding: 4% 0 4% 0
                text-align: center

                .indicator {
                    icon_batch('arrow-up');
                    transform: rotate(0) translateZ(0)
                }

                .label {
                    margin-left: 10px
                }

                &.flip .indicator {
                    transform: rotate(-180deg) translateZ(0)
                }

                &.loading .indicator {
                    transition-duration: 1s
                    animation: pullup-loading 2s infinite
                }
            }
        }
    }
}
